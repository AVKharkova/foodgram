[flake8]
max-line-length = 88

ignore =
    W503,
    F811

extend-ignore =
    E203,
    W503,

exclude =
    tests/,
    .git,
    __pycache__,
    env/,
    venv/,
    build/,
    dist/,
    */migrations/,
    static/,
    media/

per-file-ignores =
    */settings.py:E501,
    */__init__.py:F401

max-complexity = 10
statistics = True
count = True
